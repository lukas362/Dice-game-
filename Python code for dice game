import random

print("Hello, what is your name?")
i = input()
print("Hello and welcome, " + i)
print("I want to play a game with you " + i + "\nI want you to throw this six-sided dice, and the one who scores the closest to five out of five rounds wins the game")

play = True #Keeps the loop going 

games_played = 0

#while loop: keeps the code going until the player wants to stop 
while play:
    player_score = 0  #player score while playing 
    computer_score = 0  #computer score while playing 
    games_played += 1  #how many rounds have been played 

#for loop: keeps repeating this code 5 times and after that determins who won that round 
    for round_number in range(1, 6):  # rounds 1 to 5
        print(f"\nRound {round_number}")
        input("Press enter to roll the dice...")

        #Generates the players roll
        random_number = random.randint(1, 6)
        print(f"You rolled a {random_number}")

        #Generates the computers roll
        computer_number = random.randint(1, 6)
        print(f"The computer rolled a {computer_number}")

        #Decides who wins or if it's a tie round for round 
        if random_number > computer_number:
            print("You win this round!")
            player_score += 1
        elif random_number < computer_number:
            print("Computer wins this round")
            computer_score += 1
        else:
            print("It's a tie!")

    #The final score after 5 rounds has passed
    print(f"\nFinal Score: {i}: {player_score} - Computer: {computer_score}") #compares player score vs computer score 
    if player_score > computer_score:
        print("Congratulations, you won the game!")   #player wins 
    elif player_score < computer_score:
        print("The computer won the game!")   #computer wins

    #Ask the player if he/she/they want to play again
    again = input("\nDo you want to play again (yes/no)? ").lower()
    if again != "yes":
        play = False
        print("Thanks for playing! :p")
        total_wins = 0  #total_wins starts at 0
        total_loses = 0 #total_loses starts at 0

#keeps track off how man times you've won or lost 
if player_score > computer_score: 
    total_wins += 1
if player_score < computer_score:
    total_loses += 1 
    #prints total games played, won and lost
    print(f"Total games played {games_played}")
    print(f"Total games won {total_wins}")
    print(f"Total games lost {total_loses}")
